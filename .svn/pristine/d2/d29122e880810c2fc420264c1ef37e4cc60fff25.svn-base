      </isNotEmpty>
      <isNotEmpty prepend="" property="TENNGUOIBENH">
        and (BN.TENBENHNHAN like '%' + #TENNGUOIBENH# + '%' or BN.MAYTE like '%' + #TENNGUOIBENH# + '%')
      </isNotEmpty>
      ) AS T
    </statement>
